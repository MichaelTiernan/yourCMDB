<group name="user accounts">
	<object-type name="RadiusAccount">
		<static>
			<comment><![CDATA[Username: yourCMDB_%yourCMDB_object_id%<br />Password: %account-password%]]></comment>
		</static>
		<fields>
			<fieldgroup name="State">
                                <field name="state-state" label="State" type="dropdown-predefined,active,disabled,closed" summaryfield="true"/>
                        </fieldgroup>
			<fieldgroup name="Customer">
                                <field name="customer-nummer" label="Customer Number" type="text" summaryfield="true"/>
                                <field name="customer-name" label="Customer Name" type="text" summaryfield="true"/>
                        </fieldgroup>
                        <fieldgroup name="Account">
                                <field name="account-managed" label="Account deployment" type="boolean"/>
                                <field name="account-password" label="Password" type="password" />
                                <field name="account-downstream" label="Downstream" default="25000" type="text" />
                                <field name="account-upstream" label="Upstream" type="text" />
                        </fieldgroup>
		</fields>
	</object-type>
	<object-type name="AsteriskAccount">
		<static>
			<comment><![CDATA[Username: yourCMDB_%yourCMDB_object_id%<br />Password: %account-password%]]></comment>
		</static>
		<fields>
			<fieldgroup name="Customer">
                                <field name="customer-nummer" label="Customer Number" type="text" summaryfield="true"/>
                                <field name="customer-name" label="Customer Name" type="text" summaryfield="true"/>
                        </fieldgroup>
                        <fieldgroup name="Account">
                                <field name="account-managed" label="Account deployment" type="boolean"/>
                                <field name="account-password" label="Password" type="password" />
                                <field name="account-telephone1" label="Telephone 1" type="text" />
                                <field name="account-telephone2" label="Telephone 2" type="text" />
                                <field name="account-telephone3" label="Telephone 3" type="text" />
                        </fieldgroup>
		</fields>
	</object-type>
</group>

